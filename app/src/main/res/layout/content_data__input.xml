<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.allanakshay.test.Data_Input"
    tools:showIn="@layout/activity_data__input"
    android:padding="10sp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Activity"
        android:id="@+id/Data_edit"
        android:padding="10sp"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Data_edit"
        android:id="@+id/Data_time"></TimePicker>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:text="Add"
        android:layout_marginTop="20dp"
        android:padding="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Data_time"
        android:id="@+id/Data_button"/>

</RelativeLayout>
